@model DataLayer.ProductComment

@using (Ajax.BeginForm("CreateComment", "Product", FormMethod.Post, new AjaxOptions()
{
    OnSuccess = "successComment",
    UpdateTargetId = "listComment"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ProductID)
    @Html.HiddenFor(model => model.ParentID)

    <form action="" method="post">
        <div class="col-md-5">
            <div class="form-group comment">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "نام و نام خانوادگی" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group comment">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "ایمیل" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group comment">
                @Html.TextBoxFor(model => model.Website, new { @class = "form-control", placeholder = "وب سایت" })
            </div>
        </div>
        <div class="col-md-7 comment">
            @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", placeholder = "متن دیدگاه" })
            @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            <input class="btn btn-primary" value="ثبت دیدگاه ارزشمند شما" type="submit">
        </div>
        <div class="clearfix"></div>
    </form>

}


