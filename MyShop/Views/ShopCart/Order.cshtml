@model IEnumerable<DataLayer.ShowOrderViewModel>

<div class="row basket-style">
    <section class="border-radius">
        <div class="tbl-head">
            <ul>
                <li> شرح محصول </li>
                <li> تعداد و وزن </li>
                <li> قیمت واحد </li>
                <li> قیمت کل   </li>
            </ul>
        </div>
        <div class="hidden-head">
            سبد خرید شما
        </div>
        <div class="tbl-body">

            @foreach (var item in Model)
            {
                <ul>
                    <li>
                        <a href="/Products/@item.ProductID" class="product-image"><img class="border-radius" src="/Images/Product/thumb/@item.ImageName"></a>
                        <div class="product-info-left-side">
                            <a href="/Products/@item.ProductID" class="product-title"> <h5> @item.Title </h5> </a>
                        </div>
                    </li>
                    <li>
                        <p>
                            <input type="number" name="points" min="1" max="30" step="1" value="@item.Count" onchange="CommandOrder(@item.ProductID,$(this).val())">
                        </p>
                    </li>
                    <li>
                        <label class="lbl-hidden"> </label> <span class="lbl-price"> @item.Price.ToString("#,0") تومان </span>
                    </li>
                    <li>
                        <label class="lbl-hidden"></label> <span class="lbl-price"> @item.Sum.ToString("#,0") تومان </span>

                        <a onclick="CommandOrder(@item.ProductID,0)" class="btn"><i class="delete-button">X</i></a>
                    </li>
                </ul>
            }
        </div>
        <div class="tbl-footer">
            <ul>
                <li> قیمت کل : <span> @Model.Sum(m => m.Sum).ToString("#,0") تومان </span></li>
                <li class="total-price"> مبلغ قابل پرداخت : <span> @Model.Sum(m => m.Sum).ToString("#,0") تومان </span></li>
            </ul>
        </div>
        <a href="/ShopCart/Payment" type="button" class="border-radius submit-basket-button"> تایید و پرداخت </a>
        <div class="clearfix"></div>
    </section>
</div>

